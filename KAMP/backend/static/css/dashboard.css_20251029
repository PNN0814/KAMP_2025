/* Dashboard Page Specific Styles */

body {
    overflow: hidden;
    height: 100vh;
}

.dashboard-container {
    display: flex;
    height: 100vh;
    overflow: hidden;
}

/* Sidebar */
.sidebar {
    width: 280px;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(10px);
    border-right: 1px solid rgba(148, 163, 184, 0.2);
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
}

.sidebar-header {
    padding: 24px;
    border-bottom: 1px solid rgba(148, 163, 184, 0.2);
}

.back-button {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #60a5fa;
    padding: 8px 16px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    margin-bottom: 16px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

.back-button:hover {
    background: rgba(59, 130, 246, 0.2);
    transform: translateX(-3px);
}

.back-arrow {
    font-size: 18px;
}

.sidebar-title {
    font-size: 20px;
    font-weight: 700;
    color: #ffffff;
    background: linear-gradient(135deg, #ffffff 0%, #93c5fd 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.sidebar-nav {
    flex: 1;
    padding: 16px;
    overflow-y: auto;
}

.nav-item {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: rgba(30, 41, 59, 0.3);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 10px;
    color: #cbd5e1;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 8px;
    font-size: 15px;
}

.nav-item:hover {
    background: rgba(59, 130, 246, 0.1);
    border-color: rgba(59, 130, 246, 0.4);
    color: #93c5fd;
    transform: translateX(5px);
}

.nav-item.active {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(99, 102, 241, 0.3) 100%);
    border-color: rgba(59, 130, 246, 0.6);
    color: #ffffff;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
}

.nav-icon {
    font-size: 20px;
}

.sidebar-footer {
    padding: 24px;
    border-top: 1px solid rgba(148, 163, 184, 0.2);
}

.model-info {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info-label {
    font-size: 13px;
    color: #94a3b8;
}

.info-value {
    font-size: 13px;
    color: #cbd5e1;
    font-weight: 600;
}

.info-value.active {
    color: #34d399;
}

/* Main Content */
.main-content {
    flex: 1;
    overflow-y: auto;
    padding: 32px;
    background: linear-gradient(135deg, #0a1628 0%, #1a2847 100%);
}

.tab-content {
    display: none;
    animation: fadeIn 0.5s ease;
}

.tab-content.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    flex-wrap: wrap;
    gap: 16px;
}

.content-title {
    font-size: 32px;
    font-weight: 700;
    color: #ffffff;
}

.header-stats {
    display: flex;
    gap: 16px;
}

.stat-badge {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 12px 20px;
    background: rgba(30, 41, 59, 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 10px;
}

.stat-label {
    font-size: 12px;
    color: #94a3b8;
}

.stat-value {
    font-size: 20px;
    font-weight: 700;
    color: #60a5fa;
}

/* Charts Grid */
.charts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    height: calc(100vh - 200px);
}

.chart-card {
    display: flex;
    flex-direction: column;
}

.chart-header {
    margin-bottom: 20px;
}

.chart-title {
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 4px;
}

.chart-subtitle {
    font-size: 13px;
    color: #94a3b8;
}

.chart-container {
    flex: 1;
    position: relative;
    min-height: 0;
}

.chart-container canvas {
    max-height: 100%;
}

/* Responsive */
@media (max-width: 1400px) {
    .charts-grid {
        grid-template-columns: 1fr;
        height: auto;
    }

    .chart-card {
        min-height: 350px;
    }

    .main-content {
        overflow-y: auto;
    }
}

@media (max-width: 768px) {
    .sidebar {
        width: 70px;
    }

    .sidebar-header,
    .sidebar-footer {
        padding: 16px 12px;
    }

    .sidebar-title,
    .nav-item span:not(.nav-icon),
    .model-info {
        display: none;
    }

    .nav-item {
        justify-content: center;
        padding: 12px;
    }

    .content-title {
        font-size: 24px;
    }

    .header-stats {
        width: 100%;
        justify-content: space-between;
    }
}
